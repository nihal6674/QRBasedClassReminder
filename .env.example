NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
# For local development: use localhost
# For Docker: the DATABASE_URL is overridden in docker-compose.yml to use container hostname
DB_HOST=localhost
DB_PORT=5434
DB_NAME=reminder_app_db
DB_USER=postgres
DB_PASSWORD=postgres123
DATABASE_URL=postgresql://postgres:postgres123@localhost:5434/reminder_app_db

# JWT Secrets (use strong, unique secrets in production)
JWT_ACCESS_SECRET=your-secure-access-secret-min-32-chars-here
JWT_REFRESH_SECRET=your-secure-refresh-secret-min-32-chars-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Auth Service Configuration
AUTH_SERVICE_PORT=3001

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
COOKIE_DOMAIN=

# Default Admin (created on first startup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=SecurePassword123!
ADMIN_NAME=System Admin

# Email Configuration (optional, for password reset emails)
GMAIL_ADDRESS=
GMAIL_PASSWORD=
